<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/map_thumbnail"
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:contentDescription="map"
        android:src="@drawable/ic_launcher_background"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/history_drive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_thumbnail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:text="Evening Drive"/>

    <TextView
        android:id="@+id/history_drive_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_thumbnail"
        android:layout_below="@id/history_drive_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textSize="10dp"
        android:text="May 15, 2019 at 2:30 PM"/>

    <TextView
        android:id="@+id/history_drive_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_thumbnail"
        android:layout_below="@id/history_drive_date"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:text="Distance: 12.7 miles"/>

    <TextView
        android:id="@+id/history_drive_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_thumbnail"
        android:layout_below="@id/history_drive_distance"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        android:text="Duration: 1 hour 25 min"/>

    <TextView
        android:id="@+id/history_drive_top_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/map_thumbnail"
        android:layout_below="@id/history_drive_duration"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black"
        android:text="Top Speed: 78.3 mph"/>

</RelativeLayout>