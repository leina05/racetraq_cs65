<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayDriveActivity"
    tools:showIn="@layout/activity_display_drive"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:ap="http://schemas.android.com/apk/res-auto"

        >

        <TextView
            android:id="@+id/display_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Date"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/display_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="12dp"
            android:text="Duration"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/display_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_date"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:text="Distance"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/display_elevation_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_date"
            android:layout_marginStart="240dp"
            android:layout_marginTop="8dp"
            android:text="Elevation"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/display_avg_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_distance"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:text="Avg Speed"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/display_top_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_distance"
            android:layout_marginStart="240dp"
            android:layout_marginTop="8dp"
            android:text="Top Speed"
            android:textSize="16dp" />

        <!--<View-->
        <!--android:id="@+id/separator"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@android:color/darker_gray"-->
        <!--android:layout_below="@id/display_avg_speed"-->
        <!--android:layout_marginTop="12dp"/>-->

        <TextView
            android:id="@+id/display_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_avg_speed"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Course"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/display_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_map_title"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/dartmouth_map" />

        <TextView
            android:id="@+id/display_graph_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Drive Data"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_below="@id/display_map"/>

        <com.androidplot.xy.XYPlot
            style="@style/APDefacto.Light"
            android:id="@+id/speed_plot"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_below="@id/display_graph_title"
            android:layout_marginTop="12dp"
            ap:rangeTitle="Speed (mph), Temp (C)"
            ap:domainTitle="Time (s)"
            ap:lineLabels="left|bottom"
            ap:lineLabelRotationBottom="-45" />


    </RelativeLayout>
</ScrollView>